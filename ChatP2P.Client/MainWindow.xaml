<Window x:Class="ChatP2P.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatP2P.Client"
        mc:Ignorable="d"
        Title="ChatP2P Client" Height="900" Width="1400" 
        MinHeight="700" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="#FF2B2B2B">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <TabControl Name="mainTabControl" Background="#FF1E1E1E" BorderBrush="#FF333333" SelectionChanged="MainTabControl_SelectionChanged">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" Value="#FF1E1E1E"/>
                    <Setter Property="BorderBrush" Value="#FF333333"/>
                    <Setter Property="Padding" Value="12,8"/>
                    <Setter Property="Margin" Value="0,0,2,0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1,1,1,0"
                                        CornerRadius="4,4,0,0" Margin="0,0,2,0">
                                    <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center"
                                                      HorizontalAlignment="Center" ContentSource="Header"
                                                      Margin="{TemplateBinding Padding}"
                                                      TextBlock.Foreground="{TemplateBinding Foreground}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Panel.ZIndex" Value="100"/>
                                        <Setter TargetName="Border" Property="Background" Value="#FF0D7377"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#FF333333"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <!-- Connection Tab -->
            <TabItem Header="Connection" Name="connectionTab">
                <Grid Margin="20" Background="#FF2B2B2B">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Configuration Section -->
                    <GroupBox Header="Network Configuration" Grid.Row="0" Margin="0,0,0,20" 
                              Foreground="White" BorderBrush="#FF0D7377">
                        <Grid Margin="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Label Grid.Row="0" Grid.Column="0" Content="Display Name:" Foreground="White"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Name="txtDisplayName" Margin="5,0"
                                     Background="#FF404040" Foreground="White" BorderBrush="#FF666666"/>

                            <Label Grid.Row="0" Grid.Column="2" Content="Relay Server IP:" Foreground="White" Margin="15,0,0,0"/>
                            <TextBox Grid.Row="0" Grid.Column="3" Name="txtRelayServerIP" Margin="5,0"
                                     Background="#FF404040" Foreground="White" BorderBrush="#FF666666"
                                     Text="192.168.1.145"/>

                            <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Name="chkAutoConnect"
                                      Content="Auto-connect on startup" Margin="0,15,0,0"
                                      Foreground="White"/>
                            
                            <!-- Connection Buttons -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" Orientation="Horizontal" 
                                        Margin="0,15,0,0">
                                <Button Name="btnConnect" Content="🔗 Connect to Server" Width="150" Height="35" Margin="0,0,15,0" 
                                        Background="#FF0D7377" Foreground="White" BorderBrush="Transparent" 
                                        Click="BtnConnect_Click"/>
                                <Button Name="btnDisconnect" Content="❌ Disconnect" Width="120" Height="35" 
                                        Background="#FFFF6B6B" Foreground="White" BorderBrush="Transparent" 
                                        Click="BtnDisconnect_Click" IsEnabled="False"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Settings -->
                    <GroupBox Header="Settings" Grid.Row="1" Margin="0,0,0,20" 
                              Foreground="White" BorderBrush="#FF0D7377">
                        <StackPanel Margin="15" Orientation="Horizontal">
                            <CheckBox Name="chkStrictTrust" Content="Strict Trust" Margin="0,0,25,0"
                                      Foreground="White"/>
                            <CheckBox Name="chkVerbose" Content="Verbose Logging" Margin="0,0,25,0"
                                      Foreground="White"/>
                            <CheckBox Name="chkEncryptRelay" Content="Encrypt Relay" Margin="0,0,25,0"
                                      Foreground="White"/>
                            <CheckBox Name="chkEncryptP2P" Content="Encrypt P2P"
                                      Foreground="White"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Status -->
                    <GroupBox Header="Network Status" Grid.Row="2" Margin="0,0,0,20" 
                              Foreground="White" BorderBrush="#FF0D7377">
                        <Grid Margin="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Server Status:" Foreground="White"/>
                            <Label Grid.Column="1" Name="lblServerStatus" Content="Disconnected" 
                                   Foreground="#FFFF6B6B" FontWeight="Bold"/>
                            <Label Grid.Column="2" Content="Network Mode:" Foreground="White" Margin="20,0,0,0"/>
                            <Label Grid.Column="3" Name="lblNetworkMode" Content="None" 
                                   Foreground="#FFFF6B6B" FontWeight="Bold"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Friends List -->
                    <GroupBox Header="Friends Online" Grid.Row="3" Margin="0,0,0,20" 
                              Foreground="White" BorderBrush="#FF0D7377">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ListView Name="lstPeers" Grid.Row="0" Background="#FF404040" 
                                      Foreground="White" BorderBrush="#FF666666"
                                      MouseDoubleClick="LstPeers_MouseDoubleClick">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Peer Name" Width="180">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Name}" Foreground="White"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Status" Width="100">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Status}" Foreground="White"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="P2P" Width="80">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding P2PStatus}" Foreground="White"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Crypto" Width="80">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding CryptoStatus}" Foreground="White"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Auth" Width="80">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding AuthStatus}" Foreground="White"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <!-- Removed btnSendFile - using btnSendFileChat in chat tab instead -->
                        </Grid>
                    </GroupBox>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Name="btnTestCrypto" Content="🔐 Test Crypto" Width="120" Height="35"
                                Margin="0,0,15,0" Background="#FF9C27B0" Foreground="White" BorderBrush="Transparent"
                                Click="BtnTestCrypto_Click"/>
                        <Button Name="btnSecurityCenter" Content="🛡 Security Center" Width="150" Height="35"
                                Margin="0,0,15,0" Background="#FFFF8C42" Foreground="White" BorderBrush="Transparent"
                                Click="BtnSecurityCenter_Click"/>
                        <Button Name="btnP2PAdvanced" Content="⚙ P2P Config" Width="120" Height="35"
                                Background="#FF666666" Foreground="White" BorderBrush="Transparent"
                                Click="BtnP2PAdvanced_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <!-- Chat Windows Tab -->
            <TabItem Name="chatTab">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Name="chatTabHeader" Text="Chat"/>
                        <Ellipse Name="chatNotificationDot" Width="8" Height="8"
                                 Fill="#FFFF6B6B" Margin="5,0,0,0"
                                 Visibility="Collapsed"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#FF2B2B2B">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- SECTION 1: Quick Start (Haut) -->
                    <GroupBox Grid.Row="0" Header="🚀 Quick Start" Margin="20,20,20,10"
                              Foreground="White" BorderBrush="#FF0D7377">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Connect to online peers:"
                                       Foreground="#FFCCCCCC" FontSize="12" Margin="0,0,0,10"/>

                            <ListView Name="lstQuickStart" Grid.Row="1" Background="#FF404040"
                                      Foreground="White" BorderBrush="#FF666666"
                                      MouseDoubleClick="LstQuickStart_MouseDoubleClick">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Peer" Width="120">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding StatusIcon}" FontSize="10"
                                                                   VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding Name}" Foreground="White"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Status" Width="80">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Status}" Foreground="White"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Actions" Width="150">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="💬" Width="30" Height="25"
                                                                Background="#FF0D7377" Foreground="White"
                                                                BorderBrush="Transparent" Margin="0,0,5,0"
                                                                ToolTip="Open Chat"
                                                                Click="BtnQuickChat_Click" Tag="{Binding}"/>
                                                        <Button Content="📎" Width="30" Height="25"
                                                                Background="#FFFF8C42" Foreground="White"
                                                                BorderBrush="Transparent"
                                                                ToolTip="Send File"
                                                                Click="BtnQuickFile_Click" Tag="{Binding}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </GroupBox>

                    <!-- SECTION 2: Chat History (Bas) -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="350"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Histoire des conversations -->
                        <GroupBox Grid.Column="0" Header="📝 Chat History" Margin="20,0,10,20"
                                  Foreground="White" BorderBrush="#FFFF8C42">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <ListView Name="lstChatHistory" Grid.Row="0" Background="Transparent"
                                          BorderBrush="Transparent" Foreground="White"
                                          SelectionChanged="LstChatHistory_SelectionChanged">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="Padding" Value="12,8"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF333333"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#FFFF8C42"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Peer Name + Status -->
                                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                                                    <TextBlock Text="{Binding StatusIcon}" FontSize="10"
                                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding PeerName}"
                                                               Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                                                </StackPanel>

                                                <!-- Time -->
                                                <TextBlock Grid.Row="0" Grid.Column="1"
                                                           Text="{Binding LastActivityFormatted}"
                                                           Foreground="#FFAAAAAA" FontSize="11"
                                                           VerticalAlignment="Center" Margin="5,0,0,0"/>

                                                <!-- Clear button for error messages -->
                                                <Button Grid.Row="0" Grid.Column="2" Content="🗑"
                                                        Width="20" Height="20" FontSize="10"
                                                        Background="Transparent" Foreground="#FFFF6B6B"
                                                        BorderBrush="Transparent" Margin="5,0,0,0"
                                                        ToolTip="Clear this conversation"
                                                        Click="BtnClearConversation_Click" Tag="{Binding}"
                                                        Visibility="{Binding HasErrors, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                                <!-- Unread Badge -->
                                                <Border Grid.Row="0" Grid.Column="2"
                                                        Background="#FFFF6B6B" CornerRadius="10"
                                                        MinWidth="18" Height="18" Margin="5,0,0,0"
                                                        Visibility="{Binding HasUnread, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding UnreadDisplay}"
                                                               Foreground="White" FontSize="10" FontWeight="Bold"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Last Message -->
                                                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                                           Text="{Binding LastMessage}"
                                                           Foreground="#FFCCCCCC" FontSize="12"
                                                           TextTrimming="CharacterEllipsis" Margin="15,2,0,0"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                                    <Button Name="btnClearAllHistory" Content="🗑 Clear All History" Height="30"
                                            Background="#FFFF6B6B" Foreground="White" BorderBrush="Transparent"
                                            Click="BtnClearAllHistory_Click"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    
                    <!-- Chat Area -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="70"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Chat Header -->
                        <Border Grid.Row="0" Background="#FF333333" BorderBrush="#FF444444" BorderThickness="0,0,0,1">
                            <Grid Margin="20,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Name="lblChatPeer" Text="Select a chat..." 
                                               FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Name="lblP2PStatus" Text="P2P: ❌" Foreground="#FFFF6B6B" 
                                                   FontSize="11" Margin="0,0,15,0"/>
                                        <TextBlock Name="lblCryptoStatus" Text="🔒: ❌" Foreground="#FFFF6B6B" 
                                                   FontSize="11" Margin="0,0,15,0"/>
                                        <TextBlock Name="lblAuthStatus" Text="Auth: ❌" Foreground="#FFFF6B6B" 
                                                   FontSize="11"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Name="btnStartP2PChat" Content="🔗 Start P2P" Width="90" Height="30" 
                                            Margin="5,0" Background="#FF0D7377" Foreground="White" 
                                            BorderBrush="Transparent" Click="BtnStartP2PChat_Click"/>
                                    <Button Name="btnSendFileChat" Content="📎" Width="35" Height="30" 
                                            Margin="5,0" FontSize="16" Background="Transparent" 
                                            Foreground="#FF0D7377" BorderBrush="Transparent" 
                                            Click="BtnSendFileChat_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Messages -->
                        <ScrollViewer Grid.Row="1" Name="messagesScrollViewer" VerticalScrollBarVisibility="Auto" 
                                      Background="#FF2B2B2B" Margin="20">
                            <StackPanel Name="messagesPanel"/>
                        </ScrollViewer>
                        
                        <!-- File Transfer Progress -->
                        <Border Grid.Row="2" Name="fileTransferBorder" Visibility="Collapsed" 
                                Background="#FF333333" Margin="20,0" Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <TextBlock Name="lblFileTransferStatus" Text="Transferring file..." 
                                               Foreground="White" VerticalAlignment="Center"/>
                                    <Button Name="btnCancelTransfer" Content="❌" Width="25" Height="25" 
                                            Margin="10,0,0,0" Background="Transparent" Foreground="#FFFF6B6B" 
                                            BorderBrush="Transparent" Click="BtnCancelTransfer_Click"/>
                                </StackPanel>
                                <ProgressBar Grid.Row="1" Name="progressFileTransfer" Height="8" 
                                             Margin="0,10,0,0" Background="#FF666666" 
                                             Foreground="#FF0D7377"/>
                            </Grid>
                        </Border>
                        
                        <!-- Message Input -->
                        <Border Grid.Row="3" Background="#FF333333" BorderBrush="#FF444444" BorderThickness="0,1,0,0">
                            <Grid Margin="20,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Name="txtMessage" Grid.Column="0" 
                                         Background="#FF404040" Foreground="White" 
                                         BorderBrush="#FF666666" BorderThickness="1" 
                                         Padding="15,12" FontSize="14" Height="45"
                                         KeyDown="TxtMessage_KeyDown" IsEnabled="False"
                                         VerticalContentAlignment="Center"/>
                                <Button Name="btnClearChat" Grid.Column="1" Content="🗑" 
                                        Width="45" Height="45" Margin="10,0,5,0" 
                                        FontSize="16" Background="Transparent" 
                                        Foreground="#FF666666" BorderBrush="Transparent" 
                                        Click="BtnClearChat_Click"/>
                                <Button Name="btnSendMessage" Grid.Column="2" Content="➤" 
                                        Width="50" Height="45" 
                                        FontSize="18" FontWeight="Bold"
                                        Background="#FF0D7377" Foreground="White" 
                                        BorderBrush="Transparent" BorderThickness="0"
                                        Click="BtnSendMessage_Click" IsEnabled="False"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
            </TabItem>
            
            <!-- Contacts Tab -->
            <TabItem Header="Contacts" Name="contactsTab">
                <Grid Margin="20" Background="#FF2B2B2B">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Friend Requests Section -->
                    <GroupBox Grid.Row="0" Header="Friend Requests" Margin="0,0,0,15" 
                              Foreground="White" BorderBrush="#FFFF8C42">
                        <ListView Name="lstFriendRequests" Background="#FF404040" 
                                  Foreground="White" BorderBrush="#FF666666" Height="100">
                            <ListView.ContextMenu>
                                <ContextMenu Background="#FF404040">
                                    <MenuItem Header="Clear Old Requests (7+ days)" Click="MenuItem_ClearOldRequests_Click" 
                                              Foreground="White" Background="#FF404040"/>
                                    <MenuItem Header="Clear All Pending Requests" Click="MenuItem_ClearAllRequests_Click" 
                                              Foreground="White" Background="#FF404040"/>
                                </ContextMenu>
                            </ListView.ContextMenu>
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="From" Width="150">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding FromPeer}" Foreground="White"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Message" Width="200">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Message}" Foreground="White"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Date" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RequestDate}" Foreground="White"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Action" Width="160">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="✓ Accept" Width="70" Height="25" 
                                                            Background="#FF0D7377" Foreground="White" 
                                                            BorderBrush="Transparent" Margin="0,0,5,0"
                                                            Click="BtnAcceptFriend_Click" Tag="{Binding}"/>
                                                    <Button Content="✗ Reject" Width="70" Height="25" 
                                                            Background="#FFFF6B6B" Foreground="White" 
                                                            BorderBrush="Transparent"
                                                            Click="BtnRejectFriend_Click" Tag="{Binding}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>
                    
                    <ListView Name="lstContacts" Grid.Row="1" Background="#FF404040" 
                              Foreground="White" BorderBrush="#FF666666">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Contact Name" Width="250">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding PeerName}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Status" Width="120">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Status}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Verified" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding IsVerified}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Added Date" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding AddedDate}" Foreground="White"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    
                    <!-- Search and Add Friend Section -->
                    <GroupBox Grid.Row="2" Header="Add New Friend" Margin="0,20,0,15" 
                              Foreground="White" BorderBrush="#FF0D7377">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Row="0" Grid.Column="0" Name="txtSearchPeer" 
                                     Margin="0,0,10,0" Background="#FF404040" Foreground="White" 
                                     BorderBrush="#FF666666" Padding="10,8" FontSize="14"/>
                            <Button Grid.Row="0" Grid.Column="1" Name="btnSearchPeer" Content="🔍 Search" 
                                    Width="80" Height="35" Margin="0,0,10,0" 
                                    Background="#FF4ECDC4" Foreground="White" BorderBrush="Transparent" 
                                    Click="BtnSearchPeer_Click"/>
                            <Button Grid.Row="0" Grid.Column="2" Name="btnImportKey" Content="📋 Import Key" 
                                    Width="100" Height="35" 
                                    Background="#FFFF8C42" Foreground="White" BorderBrush="Transparent" 
                                    Click="BtnImportKey_Click"/>
                            
                            <ListView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Name="lstSearchResults" 
                                      Background="#FF404040" Foreground="White" BorderBrush="#FF666666" 
                                      Height="100" Margin="0,15,0,0" Visibility="Collapsed">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Peer Name" Width="200">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Name}" Foreground="White"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Status" Width="120">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Status}" Foreground="White"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Action" Width="120">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="+ Add Friend" Width="100" Height="25" 
                                                            Background="#FF0D7377" Foreground="White" 
                                                            BorderBrush="Transparent" 
                                                            Click="BtnAddFriend_Click" Tag="{Binding}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </GroupBox>
                    
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                        <Button Name="btnRemoveContact" Content="- Remove Contact" Width="140" Height="35"
                                Background="#FFFF6B6B" Foreground="White" BorderBrush="Transparent"
                                Click="BtnRemoveContact_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
<Window x:Class="ChatP2P.SecurityTester.Windows.WinDivertLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🕷️ WinDivert Packet Interceptor - Real-time Monitoring"
        Height="600" Width="1000"
        WindowState="Normal"
        Background="#1e1e1e">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2d2d30" Padding="10">
            <StackPanel>
                <TextBlock Text="🕷️ WinDivert Packet Interceptor"
                           FontSize="16" FontWeight="Bold"
                           Foreground="#ffffff"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Status: " Foreground="#cccccc"/>
                    <TextBlock x:Name="StatusText" Text="Stopped"
                               Foreground="#ff6b6b" FontWeight="Bold"/>
                    <TextBlock Text=" | Packets: " Foreground="#cccccc" Margin="20,0,0,0"/>
                    <TextBlock x:Name="PacketCountText" Text="0"
                               Foreground="#4ecdc4" FontWeight="Bold"/>
                    <TextBlock Text=" | Intercepted: " Foreground="#cccccc" Margin="20,0,0,0"/>
                    <TextBlock x:Name="InterceptedCountText" Text="0"
                               Foreground="#ff9ff3" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Log Area -->
        <Border Grid.Row="1" Background="#252526" BorderBrush="#3e3e42" BorderThickness="1">
            <ScrollViewer x:Name="LogScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                <TextBox x:Name="LogTextBox"
                         Background="Transparent"
                         Foreground="#dcdcdc"
                         FontFamily="Consolas"
                         FontSize="11"
                         IsReadOnly="True"
                         TextWrapping="NoWrap"
                         BorderThickness="0"
                         Padding="10"/>
            </ScrollViewer>
        </Border>

        <!-- Controls -->
        <Border Grid.Row="2" Background="#2d2d30" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="StartButton" Content="🚀 Start Interception"
                        Click="StartButton_Click"
                        Background="#0e639c" Foreground="White"
                        Padding="10,5" Margin="0,0,10,0"/>
                <Button x:Name="StopButton" Content="⏹️ Stop Interception"
                        Click="StopButton_Click"
                        Background="#d73027" Foreground="White"
                        Padding="10,5" Margin="0,0,10,0" IsEnabled="False"/>
                <Button x:Name="ClearButton" Content="🧹 Clear Logs"
                        Click="ClearButton_Click"
                        Background="#6c757d" Foreground="White"
                        Padding="10,5" Margin="0,0,20,0"/>
                <CheckBox x:Name="AutoScrollCheckbox" Content="Auto-scroll"
                          IsChecked="True" Foreground="#cccccc"
                          VerticalAlignment="Center" Margin="0,0,20,0"/>
                <TextBlock Text="Filter:" Foreground="#cccccc"
                           VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="FilterTextBox" Width="200" Height="25"
                         Background="#3c3c3c" Foreground="White"
                         BorderBrush="#555555" Padding="5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>